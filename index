<!-- JAVASCRIPT --> <script> /* ------------------------------ / / NAME ENTRY LOGIC / / ------------------------------ */

const players = [];

function addPlayer() {
  const input = document.getElementById("nameInput");
  const name = input.value.trim();
  if (!name) return;

  players.push(name);
  input.value = "";
  renderPlayers();
}

function renderPlayers() {
  const list = document.getElementById("playerList");
  list.innerHTML = "";

  players.forEach(p => {
    const div = document.createElement("div");
    div.className = "player";
    div.textContent = p;
    list.appendChild(div);
  });

  document.getElementById("startGameBtn").disabled = players.length < 2;
}

function beginGame() {
  document.getElementById("setup").classList.add("hidden");
  document.getElementById("gameContainer").classList.remove("hidden");
}


/* ------------------------------ */
/* ORIGINAL GAME LOGIC */
/* ------------------------------ */

const wordList = [
  "Eiffel Tower", "Pizza slice", "Ice cream cone", "Hot-air balloon", "Castle", "Robot", "Rainbow",
  "Backpack", "Snowman", "Tree", "Mountain", "Sunflower", "Umbrella", "Toothbrush", "Glasses",
  "Spoon", "Lamp", "Couch", "Clock", "Pillow", "Broom", "Fish", "Cat", "Butterfly", "Turtle",
  "Bird", "Bicycle", "Airplane", "Boat", "Train", "Rocket", "Treasure chest", "Magic wand", "Star",
  "Moon", "Sun", "House", "Bridge", "Car", "Bus", "Camera", "Guitar", "Drum", "Book", "Pencil",
  "Key", "Door", "Window", "Cloud", "Volcano", "Island", "Palm tree", "Tent", "Lighthouse",
  "Penguin", "Elephant", "Lion", "Snail", "Dolphin", "Dragon", "Crown", "Treasure map",
  "Rocket ship", "Spaceship", "Alien", "Pirate ship", "Knight", "Princess", "Castle tower",
  "Chess piece", "Soccer ball", "Basketball hoop", "Skateboard", "Roller skates", "Snowflake",
  "Iceberg", "Campfire", "Marshmallow on a stick", "Gift box", "Balloon", "Ferris wheel",
  "Roller coaster", "Mailbox", "Helicopter", "Submarine", "Anchor", "Treble clef", "Microphone",
  "Laptop", "Smartphone", "Headphones", "Globe", "Puzzle piece", "Hourglass", "Magnifying glass",
  "Ribbon", "Leaf"
];

const setupArea = document.getElementById("setupArea");
const gameArea = document.getElementById("gameArea");
const endArea = document.getElementById("endArea");

const startBtn = document.getElementById("startBtn");
const playerNameEl = document.getElementById("playerName");
const revealArea = document.getElementById("revealArea");
const revealTextEl = document.getElementById("revealText");
const revealBtn = document.getElementById("revealBtn");
const nextBtn = document.getElementById("nextBtn");
const restartBtn = document.getElementById("restartBtn");

let drawingWord = "";
let fakeIndex = -1;
let currentPlayerIndex = 0;

function resetGameState() {
  drawingWord = "";
  fakeIndex = -1;
  currentPlayerIndex = 0;

  setupArea.classList.remove("hidden");
  gameArea.classList.add("hidden");
  endArea.classList.add("hidden");
  revealArea.classList.add("hidden");
  revealBtn.classList.remove("hidden");
  nextBtn.classList.add("hidden");
  revealTextEl.textContent = "";
  revealTextEl.classList.remove("fake", "word");
}

function getRandomWord() {
  const index = Math.floor(Math.random() * wordList.length);
  return wordList[index];
}

function startRoleReveal() {
  drawingWord = getRandomWord();
  fakeIndex = Math.floor(Math.random() * players.length);
  currentPlayerIndex = 0;

  setupArea.classList.add("hidden");
  gameArea.classList.remove("hidden");
  endArea.classList.add("hidden");

  revealArea.classList.add("hidden");
  revealBtn.classList.remove("hidden");
  nextBtn.classList.add("hidden");

  updatePlayerDisplay();
}

function updatePlayerDisplay() {
  playerNameEl.textContent = players[currentPlayerIndex];
  revealArea.classList.add("hidden");
  revealBtn.classList.remove("hidden");
  nextBtn.classList.add("hidden");
  revealTextEl.textContent = "";
  revealTextEl.classList.remove("fake", "word");
}

function revealForCurrentPlayer() {
  const isFake = currentPlayerIndex === fakeIndex;

  if (isFake) {
    revealTextEl.textContent = "FAKE ARTIST";
    revealTextEl.classList.add("fake");
    revealTextEl.classList.remove("word");
  } else {
    revealTextEl.textContent = drawingWord;
    revealTextEl.classList.add("word");
    revealTextEl.classList.remove("fake");
  }

  revealArea.classList.remove("hidden");
  revealBtn.classList.add("hidden");
  nextBtn.classList.remove("hidden");
}

function nextPlayer() {
  currentPlayerIndex++;

  if (currentPlayerIndex >= players.length) {
    gameArea.classList.add("hidden");
    endArea.classList.remove("hidden");
    return;
  }

  updatePlayerDisplay();
}

startBtn.addEventListener("click", startRoleReveal);
revealBtn.addEventListener("click", revealForCurrentPlayer);
nextBtn.addEventListener("click", nextPlayer);
restartBtn.addEventListener("click", resetGameState);

resetGameState();

</script>

</body> </html>
